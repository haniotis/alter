<div class="c-about-header">
  <div class="o-container">
    <h1 class="c-about-header__heading">We <span class="c-about-header__heading-accent js-typed">empower local leaders.</span></h1>
    <div class="js-typed-strings">
      <h1>expand frontiers.</h1>
      <h1>challenge conventional wisdom.</h1>
      <h1>find the world’s most promising ventures.</h1>
      <h1>build with the best.</h1>
      <h1>transform communities.</h1>
    </div>
    <h3 class="c-about-header__subheading">Vestibulum id ligula porta felis euismod semper.</h3>
  </div>
</div>

<div>

  <% current_page.data.mission.each do |item| %>
    <div class="c-mission-row">
      <div class="c-mission-row__figure-wrap">
        <div class="c-mission-row__figure u-cover"></div>
      </div>
      <div class="c-mission-row__content">
        <div class="c-mission-row__inner">
          <%= inline_svg("/icons/#{item.icon}.svg", class: "c-mission-row__icon o-icon o-icon--large") %>
          <h3><%= item.heading %></h3>
          <p><%= item.subheading %></p>
        </div>
      </div>
    </div>
  <% end %>

</div>

<section class="c-section c-section--accent u-text-center">
  <div class="o-container">
    <div class="c-section__block">
      <div class="c-section__heading c-section__heading--lowlight">
        <h2><%= current_page.data.where_we_work.heading %></h2>
      </div>
    </div>
    <div class="c-section__block">
      <div class="o-grid">
        <% current_page.data.where_we_work.countries.each do |country| %>
          <div class="o-grid__item u-1/1 u-1/2@sm u-1/3@lg">
            <div class="c-country">
              <div class="c-country__map-wrap">
                <%= inline_svg("/about/countries/#{country.name}.svg", class: "c-country__map") %>
              </div>
              <h3 class="c-country__name"><%= country.pretty_name %></h3>
              <p class="c-country__meta"><%= country.meta %></p>
              <div class="c-country__description u-hide--medium-down">
                <small><%= country.description %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% content_for :page_scripts do %>
  <%= javascript_include_tag 'about' %>
<% end %>